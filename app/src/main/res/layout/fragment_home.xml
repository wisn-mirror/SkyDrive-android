<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clipChildren="false"
    android:fitsSystemWindows="true"
    android:descendantFocusability="blocksDescendants"
    android:focusableInTouchMode="true"
    app:qmui_skin_background="?attr/app_skin_common_background">

    <com.qmuiteam.qmui.widget.QMUIViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/home_tab_height" />

    <com.qmuiteam.qmui.widget.tab.QMUITabSegment
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_tab_height"
        android:layout_gravity="bottom"
        android:background="@color/qmui_config_color_white"
        app:qmui_tab_icon_position="top"
        app:qmui_topDividerColor="?attr/qmui_skin_support_color_separator"
        app:qmui_topDividerHeight="1px" />

    <include
        layout="@layout/item_photo_select_bottom"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_gravity="bottom" />


</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>